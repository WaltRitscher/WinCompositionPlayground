<Page x:Name="LoadingTextBlock"
      x:Class="WinComposition.Playground.Views.CheckerboardStatic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WinComposition.Playground.Views"
			xmlns:converters="using:WinComposition.Playground.ValueConverters"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" >
	<Page.Resources>
		<converters:StrengthToColorConverter x:Key="strengthConverter" />
	</Page.Resources>
	<Grid>
		<GridView x:Name="MainGrid"
							Background="DarkGray"
							IsMultiSelectCheckBoxEnabled="False"
							IsSwipeEnabled="False"
							ItemContainerStyle="{StaticResource GridViewItemStyle1}"
							ItemsSource="{Binding}"
							ManipulationMode="None"
							ScrollViewer.HorizontalScrollBarVisibility="Hidden"
							ScrollViewer.VerticalScrollBarVisibility="Hidden"
							SelectionMode="None"
							Visibility="Collapsed">
			<GridView.ItemTemplate>
				<DataTemplate>
					<Rectangle Width="20"
										 Height="20"
										 Opacity=".5"
										 Fill="{Binding SignalStrength, Converter={StaticResource strengthConverter }}" />
				</DataTemplate>
			</GridView.ItemTemplate>
		</GridView>

	</Grid>
</Page>
